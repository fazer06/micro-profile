<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :user_name, 'User name' %><br />
    <%= f.text_field :user_name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :business_name, 'Or, Business name' %><br />
    <%= f.text_field :business_name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :type, 'Account Type' %> 
    <%= f.select(:type, options_for_select([['User', 1], ['Business', 2]]), {include_blank: "Choose an Account Type"}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= button_tag(type: 'submit', class: 'btn btn-success') do %>
        Update <i class="fa fa-check"></i>
    <% end %> 
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? 
  <%= button_to registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' do %>
    Cancel my account <i class="fa fa-user"></i>
  <% end %>
</p>

<%= link_to "Back", :back , class: 'btn btn-default'%>
